---
// src/pages/index.astro
import { getGithubRepos } from '../lib/github';
import { getZennArticles } from '../lib/zenn';
import PortfolioList from '../components/PortfolioList';
import '../styles/global.css'; // Tailwind CSS

// データを取得 (ビルド時に実行)
const repos = await getGithubRepos();
const articles = await getZennArticles();

// プロフィール情報
const profile = {
  name: "Kinn00kinn",
  role: "KOSEN Advanced Course Student",
  bio: "情報専攻の高専専攻科生。Web開発とインフラに興味があります。",
  githubUrl: "https://github.com/kinn00kinn",
};
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{profile.name} - Portfolio</title>
	</head>
	<body>
        {/* Reactコンポーネントを表示 (client:load でインタラクションを有効化) */}
		<PortfolioList 
            profile={profile} 
            repos={repos} 
            articles={articles} 
            client:load 
        />
	</body>
</html>